<%= simple_form_for movie do |f| %>
  <div class="container">
    <div class="row">
      <div class="mb-3">
        <%= f.label :title %>
        <%= f.input_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :description %>
        <%= f.input_field :description, as: :text, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :link %>
        <%= f.input_field :link, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>